@model FrontEnd.ViewModels.SpeakerViewModel


<ol class="breadcrumb">
    <li><a asp-controller="Speakers" asp-action="Index">Speakers</a></li>
    <li class="active">@Model.Speaker.Name</li>
</ol>
<h2>@Model.Speaker.Name</h2>
<p>@Model.Speaker.Bio</p>
<h3>Sessions</h3>
<div class="row">
    <div class="col-md-5">
        <ul class="list-group">
            @foreach (var session in Model.Speaker.Sessions)
            {
                <li class="list-group-item"><a asp-controller="Sessions" asp-action="Index" asp-route-id="@session.ID">@session.Title</a></li>
            }
        </ul>
    </div>
</div>